    "glob-all": "^3.1.0",
    "jest": "^22.4.4",
    "jquery": "^3.3.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "laravel-echo": "^1.5.2",
    "laravel-mix": "^4.0.12",
