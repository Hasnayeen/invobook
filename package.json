    "roots": [
      "<rootDir>/resources/assets/js/",
      "<rootDir>/tests/JS/"
    ]
  },
  "standard": {
    "globals": [
      "Vue",
      "axios",
      "luxon",
      "Laravel",
      "Echo",
      "describe",
      "test",
      "expect",
      "jest",
      "it",
      "EventBus"
    ]
  },
  "plugins": [
    "html"
  ]
