{
    "name": "iluminar/goodwork",
    "description": "Self hosted project management and collaboration tool",
    "authors": [
        {
            "name": "Nehal hasnayeen",
            "email": "searching.nehal@gmail.com",
            "homepage": "https://hasnayeen.github.io"
        }
    ],
    "keywords": ["application", "project management", "team", "project", "task", "messaging", "developer", "self hosted", "container", "laravel", "vue", "tailwindcss"],
    "license": "MIT",
    "type": "application",
    "require": {
        "php": "^7.2.5",
        "ext-gd": "*",
        "doctrine/dbal": "^2.8",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.2",
        "ifsnop/mysqldump-php": "^2.7",
        "lab404/laravel-impersonate": "^1.3",
        "laravel/framework": "^7.0",
        "laravel/passport": "^9.3",
        "laravel/tinker": "^2.0",
        "pda/pheanstalk": "^4.0",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "facade/ignition": "^2.0",
        "filp/whoops": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "^1.4",
        "laravel/telescope": "^3.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Base/Utilities/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover",
            "@php artisan plugin:discover"
        ],
        "post-install": [
            "php artisan storage:link",
            "php artisan route:cache"
        ],
        "cs": "php-cs-fixer fix --dry-run -v --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        },
        "merge-plugin": {
            "include": [
                "plugins/composer.json"
            ],
            "recurse": false,
            "replace": true,
            "merge-dev": true,
            "merge-extra": true
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
