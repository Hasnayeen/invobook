{
    "name": "iluminar/goodwork",
    "description": "Self hosted project management and collaboration tool",
    "keywords": ["application", "project management", "team", "project", "task", "messaging", "developer", "self hosted", "container"],
    "license": "MIT",
    "type": "application",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.2",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0",
        "pda/pheanstalk": "^3.1",
        "predis/predis": "^1.1",
        "spatie/laravel-permission": "^2.19",
        "symfony/thanks": "^1.0"
    },
    "require-dev": {
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0"
},
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],        
        "files": [
            "app/Utilities/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },    
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
